extends layout

block content
  section.section-wrapper
    h1 Sign up
    
    a(href='/login') Login
    a(href='/signup') SignUp
    a(href='/logout') Logout

    form(method='POST' action='')
      div.form-group
        label(for='first_name') First Name: 
        input.form-control(type='text', name='first_name')
      
      div.form-group
        label(for='last_name') Last Name:
        input.form-control(type='text', name='last_name')
      
      div.form-group
        label(for='username') Username: 
        input.form-control(type='text', name='username')
    
      div.form-group
        label(for='password') Password: 
        input.form-control(type='password', name='password')
    
      div.form-group
        label(for='confirmpw') Confirm Password: 
        input.form-control(type='password', name='confirmpw')
      
      div.form-group
        label(for='membership') Clubhouse Exclusive Membership Code: 
        input.form-control(type='text', name='membership')

      button.btn.btn-primary(type='submit') Submit